TZ=UTC
PORT=3333
HOST=localhost
# For Railway/Docker, use: HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=your_app_key_here
NODE_ENV=development
# For production, use: NODE_ENV=production

# CORS Configuration
# Leave empty or 'true' to allow all origins (development)
# For production, set to your frontend URL(s), comma-separated for multiple:
# CORS_ORIGIN=https://your-app.vercel.app,https://your-domain.com
CORS_ORIGIN=

# Database (MySQL/TiDB)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_DATABASE=acca_lms

# Mux Video Configuration
MUX_TOKEN_ID=your_token_id
MUX_TOKEN_SECRET=your_token_secret
MUX_SIGNING_KEY_ID=your_signing_key_id
MUX_SIGNING_PRIVATE_KEY=your_base64_private_key

# S3-compatible storage (Cloudflare R2, DO Spaces, AWS S3, etc.)
# Note: S3_ENDPOINT should NOT include https:// prefix
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=your-account-id.r2.cloudflarestorage.com
S3_BUCKET=
